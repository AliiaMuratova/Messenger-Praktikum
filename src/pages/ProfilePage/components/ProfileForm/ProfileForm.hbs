<form class="profile-form" action="" id="profileForm">
  <fieldset class="profile-form__section">
    <legend class="profile-form__hidden">Данные профиля</legend>
    {{#if isPasswordMode}}
    {{{passwordFields}}}
    {{else}}
    {{{profileFields}}}
    {{/if}}
  </fieldset>

  {{#if isEditMode}}
  <div class="submit-buttons">
    {{{cancelButton}}}
    {{{saveButton}}}
  </div>
  {{else}}
  <div class="buttons">
    <div class="buttons__btn">
      <button type="button" id="editProfile">Изменить данные</button>
    </div>

    <div class="buttons__btn">
      <button type="button" id="editPassword">Изменить пароль</button>
    </div>

    <div class="buttons__btn">
      <a href="/login" class="red" data-link>Выйти</a>
    </div>
  </div>
  {{/if}}
</form>
